---
export interface Props {
  title?: string;
  description?: string;
  videoUrl?: string;
  background?: 'dark' | 'dark-surface';
}

const {
  title = "See RankSync work in 90 seconds",
  description = "Watch titles, slugs & schema update across an entire site with one click.",
  videoUrl = "/demo-placeholder.mp4",
  background = 'dark'
} = Astro.props;

const bgClass = background === 'dark-surface' ? 'bg-dark-surface' : 'bg-dark';
---

<section class={`py-20 ${bgClass}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8 animate-fade-in">
      <h2 class="text-3xl font-bold text-white">
        {title}
      </h2>
      <p class="mt-4 text-lg text-gray-400">
        {description}
      </p>
    </div>
    
    <div 
      class="relative aspect-video max-w-4xl mx-auto rounded-xl overflow-hidden shadow-lg animate-fade-in"
      style="animation-delay: 100ms"
    >
      <video
        class="w-full"
        autoplay
        muted
        loop
        playsinline
      >
        <source src={videoUrl} type="video/mp4" />
      </video>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    opacity: 0;
    animation: fade-in 0.6s ease-out forwards;
  }
</style>