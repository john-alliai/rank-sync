---
export interface Step {
  title: string;
  description: string;
}

export interface Props {
  title?: string;
  steps: Step[];
  highlight?: string;
}

const { 
  title = "How it works",
  steps,
  highlight
} = Astro.props;
---

<section class="py-16 px-4 max-w-4xl mx-auto">
  <h2 class="text-2xl md:text-3xl font-bold mb-8 text-center">
    {title}
  </h2>
  <ol class="list-decimal list-inside space-y-4 text-lg text-gray-200">
    {steps.map((step, index) => (
      <li>
        <span class="text-white font-semibold">{step.title}</span> â€“ {step.description}
      </li>
    ))}
  </ol>
  {highlight && (
    <blockquote class="mt-8 text-center text-lg text-electric-cyan font-semibold">
      {highlight}
    </blockquote>
  )}
</section> 