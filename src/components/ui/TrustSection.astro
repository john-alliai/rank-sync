---
export interface Props {
  tagline?: string;
  statistic?: {
    icon: string;
    text: string;
  };
  logos?: Array<{
    src: string;
    alt: string;
  }>;
}

const {
  tagline = "Trusted by Small Businesses",
  statistic = {
    icon: "‚≠ê",
    text: "Average +28% traffic lift in 30 days"
  },
  logos = []
} = Astro.props;
---

<section class="py-12 bg-dark-surface">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center space-y-8">
      <div 
        class="flex flex-col sm:flex-row items-center space-y-4 sm:space-y-0 sm:space-x-6 animate-fade-in"
      >
        <span class="text-gray-400">{tagline}</span>
        {logos.length > 0 && (
          <div class="flex space-x-6 opacity-50">
            {logos.map(logo => (
              <img src={logo.src} alt={logo.alt} class="h-8" />
            ))}
          </div>
        )}
      </div>
      
      <div 
        class="flex items-center text-lg animate-fade-in"
        style="animation-delay: 100ms"
      >
        <span class="text-yellow-400 text-2xl mr-2">{statistic.icon}</span>
        <span class="font-semibold text-white">{statistic.text}</span>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    opacity: 0;
    animation: fade-in 0.4s ease-out forwards;
  }
</style>