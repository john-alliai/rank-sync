---
export interface Props {
  title?: string;
  quote: string;
  author: string;
  ctaText?: string;
  ctaLink?: string;
}

const { 
  title = "Results that speak",
  quote,
  author,
  ctaText,
  ctaLink
} = Astro.props;
---

<section class="py-16 px-4 max-w-3xl mx-auto text-center">
  <h2 class="text-2xl md:text-3xl font-bold mb-4">{title}</h2>
  <blockquote class="text-xl text-gray-200 italic mb-4" set:html={quote}></blockquote>
  <div class="text-white font-semibold">â€” {author}</div>
  {ctaText && ctaLink && (
    <a href={ctaLink} class="inline-block mt-4 text-electric-cyan underline font-semibold">
      {ctaText}
    </a>
  )}
</section> 