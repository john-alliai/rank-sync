---
export interface SEORoadblock {
  roadblock: string;
  why: string;
  impact: string;
}

export interface Props {
  title?: string;
  roadblocks: SEORoadblock[];
}

const { 
  title = "SEO Roadblocks",
  roadblocks
} = Astro.props;
---

<section class="py-16 px-4 max-w-6xl mx-auto">
  <h2 class="text-2xl md:text-3xl font-bold mb-8 text-center">
    {title}
  </h2>
  <div class="overflow-x-auto">
    <table class="min-w-full text-left border border-gray-700 rounded-xl overflow-hidden">
      <thead class="bg-[#23262F] text-gray-300">
        <tr>
          <th class="py-3 px-4 font-semibold">Roadblock</th>
          <th class="py-3 px-4 font-semibold">Why it happens in Duda</th>
          <th class="py-3 px-4 font-semibold">Business impact</th>
        </tr>
      </thead>
      <tbody class="bg-[#1A1C23]">
        {roadblocks.map((row, index) => (
          <tr class="border-t border-gray-700">
            <td class="py-3 px-4">{row.roadblock}</td>
            <td class="py-3 px-4">{row.why}</td>
            <td class="py-3 px-4">{row.impact}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</section> 