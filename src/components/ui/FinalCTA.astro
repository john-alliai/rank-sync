---
export interface CTAButton {
  text: string;
  href: string;
  variant: 'primary' | 'secondary';
}

export interface Props {
  title?: string;
  buttons?: CTAButton[];
  background?: 'dark' | 'dark-surface';
}

const {
  title = "Never lose traffic again due to unoptimised pages.",
  buttons = [
    {
      text: 'Start Free Trial',
      href: '#',
      variant: 'primary'
    },
    {
      text: 'Talk to Us',
      href: '#',
      variant: 'secondary'
    }
  ],
  background = 'dark'
} = Astro.props;

const bgClass = background === 'dark-surface' ? 'bg-dark-surface' : 'bg-dark';
---

<section class={`py-20 ${bgClass}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center animate-fade-in">
    <h2 class="text-3xl font-bold mb-8 text-white">
      {title}
    </h2>
    
    <div class="flex flex-col sm:flex-row justify-center gap-4">
      {buttons.map((button) => (
        <a
          href={button.href}
          class={`px-8 py-3 rounded-xl font-semibold transition-all ${button.variant === 'primary' 
            ? 'bg-electric-cyan text-dark hover:bg-electric-cyan/90 transform hover:scale-105'
            : 'border-2 border-electric-cyan text-electric-cyan hover:bg-electric-cyan/10'
          }`}
        >
          {button.text}
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    opacity: 0;
    animation: fade-in 0.6s ease-out forwards;
  }
</style>