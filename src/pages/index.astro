---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/ui/Hero.astro';
import TrustSection from '../components/ui/TrustSection.astro';
import ProductDemo from '../components/ui/ProductDemo.astro';
import Problem from '../components/ui/Problem.astro';
import Solution from '../components/ui/Solution.astro';
import Features from '../components/ui/Features.astro';
import Pricing from '../components/ui/Pricing.astro';
import FinalCTA from '../components/ui/FinalCTA.astro';
import FAQ from '../components/ui/FAQ.astro';

// Import data
import { homeHero } from '../data/hero/home';
import { homeTrustBar } from '../data/trust-bar/home';
import { homeProductDemo } from '../data/product-demo/home';
import { homeProblem } from '../data/problem/home';
import { homeSolution } from '../data/solution/home';
import { homeFeatures } from '../data/features/home';
import { homePricing } from '../data/pricing/home';
import { homeFinalCTA } from '../data/cta/home';
import { homeFAQs } from '../data/faqs/home';
---

<Layout title="RankSync - One-click AI SEO">
  <main>
    <div id="home" class="bg-gradient-to-br from-dark to-dark-surface">
      <Hero {...homeHero} />
    </div>
    
    <div class="bg-dark-surface">
      <TrustSection {...homeTrustBar} />
    </div>
    
    <div class="bg-dark">
      <ProductDemo {...homeProductDemo} />
    </div>
    
    <div class="bg-dark-surface">
      <Problem {...homeProblem} />
    </div>
    
    <div class="bg-dark">
      <Solution {...homeSolution} />
    </div>
    
    <div id="features" class="bg-dark-surface">
      <Features {...homeFeatures} />
    </div>
    
    <div id="pricing" class="bg-dark">
      <Pricing {...homePricing} />
    </div>
    
    <div class="bg-dark-surface">
      <FinalCTA {...homeFinalCTA} />
    </div>
    
    <div id="faq" class="bg-dark">
      <FAQ questions={homeFAQs} />
    </div>
  </main>
</Layout>