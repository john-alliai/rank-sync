---
// 1. Imports
import Layout from "../layouts/Layout.astro";
import Hero from "../components/ui/Hero.astro";
import ProductDemo from "../components/ui/ProductDemo.astro";
import ComparisonCards from "../components/ui/ComparisonCards.astro";
import Features from "../components/ui/Features.astro";
import FAQ from "../components/ui/FAQ.astro";
import CTA from "../components/ui/CTA.astro";

// 2. Data imports
import { dudaHero } from "../data/hero/duda";
import { dudaFeatures } from "../data/features/duda";
import { dudaComparison } from "../data/comparison/duda";
import { dudaFAQs } from "../data/faqs/duda";
---

<Layout title="RankSync for Duda – SEO That Launches With You">
  <div class="bg-dark text-white min-h-screen">
    <!-- Hero Section (gradient) -->
    <Hero 
      title={dudaHero.title}
      subtitle={dudaHero.subtitle}
      buttons={[dudaHero.buttons[0]]}
      size="large"
      background="gradient"
    />
    
    <!-- Product Demo (dark-surface) -->
    <ProductDemo
      title="See how RankSync works with Duda"
      description="Watch how RankSync optimizes your Duda site in one click"
      background="dark-surface"
    />

    <!-- Comparison Section (dark) -->
    <ComparisonCards
      title="Transform Your Duda SEO Workflow"
      subtitle="See the difference RankSync makes"
      before={dudaComparison.before}
      after={dudaComparison.after}
      background="dark"
    />

    <!-- Features Section (dark-surface) -->
    <Features 
      features={dudaFeatures}
      background="dark-surface"
    />
    
    <!-- FAQs (dark) -->
    <FAQ 
      questions={dudaFAQs.slice(0,3)} 
      title="Common Questions"
      background="dark"
    />

    <!-- Final CTA (dark-surface) -->
    <CTA 
      title="Start optimizing your Duda site today"
      subtitle="Free 14-day trial • No credit card required"
      primaryButton={{
        text: "Start free trial →",
        href: "#signup"
      }}
      background="dark-surface"
    />
  </div>
</Layout>
